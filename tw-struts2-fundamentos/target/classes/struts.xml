<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN" 
	"http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
	<constant name="struts.devMode" value="true"></constant>
	
	<package name="tw-struts2-fundamentos" extends="struts-default">
		
		<action name="index">
			<result>/index.jsp</result>
		</action>
		
		<action name="teste" class="br.com.treinaweb.struts2.actions.TesteAction">
			<result name="TESTE">/teste.jsp</result>
		</action>
		
		<action name="paginaCadastroPessoa">
			<result>/pages/pessoa/cadastrarPessoa.jsp</result>
		</action>
		
		<action name="inserirPessoa" class="br.com.treinaweb.struts2.controllers.PessoaController"
			method="inserirPessoa">
			<result name="OK">/pages/pessoa/mostrarPessoa.jsp</result>
		</action>
		
	</package>
</struts>